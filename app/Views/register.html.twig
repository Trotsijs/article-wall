{% extends 'layout.html.twig' %}

{% block content %}
    <div class="mb-5 bg-gray-200 mt-20 max-w-md mx-auto p-8 rounded-md shadow-md">
        <h2 class="text-center text-2xl font-semibold mb-6">Register</h2>
        <form method="POST" action="/register">
            <div class="">
                <label for="name" class="mb-1 block font-medium">Name:</label>
                <input name="name" type="text" id="name"
                       class="mb-2 bg-gray-100 w-full border-gray-300 rounded-md px-3 py-2"
                       placeholder="John Doe">
                {% if errors.name %}
                    <span class="text-red-500">
                        {{ errors.name[0] }}
                    </span>
                {% endif %}
            </div>

            <div class="">
                <label for="email" class="mb-1 block font-medium">Email:</label>
                <input name="email" type="email" id="email"
                       class="bg-gray-100 w-full border-gray-300 rounded-md px-3 py-2"
                       placeholder="john.doe@foobar.com">
                {% if errors.password %}
                    <span class="text-red-500">
                        {{ errors.email[0] }}
                    </span>
                {% endif %}
            </div>

            <div class="">
                <label for="password" class="mb-1 block font-medium">Password:</label>
                <input name="password" type="password" id="password"
                       class="bg-gray-100 w-full border-gray-300 rounded-md px-3 py-2"
                       placeholder="">
                {% if errors.password %}
                    <span class="text-red-500">
                        {{ errors.password[0] }}
                    </span>
                {% endif %}
            </div>

            <div class="">
                <label for="password-confirmation" class="block font-medium">Confirm Password:</label>
                <input name="password_confirmation" type="password" id="password-confirmation"
                       class="w-full border-gray-300 rounded-md px-3 py-2"
                       placeholder="">
                {% if errors.password_confirmation %}
                    <span class="text-red-500">
                        {{ errors.password_confirmation[0] }}
                    </span>
                {% endif %}
            </div>

            <button type="submit"
                    class="mt-5 w-full bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md">
                Register
            </button>
        </form>
    </div>
{% endblock %}