{% extends 'layout.html.twig' %}

{% block content %}
    <div class="mb-5 bg-gray-200 mt-20 max-w-md mx-auto p-8 rounded-md shadow-md">
        <h2 class="text-center text-2xl font-semibold mb-6">Log In</h2>
        <form method="POST" action="/login">
            <div class="mb-4">
                <label for="email" class="mb-1 block font-medium">Email:</label>
                <input name="email" type="email" id="email"
                       class="bg-gray-100 w-full border-gray-300 rounded-md px-3 py-2"
                       placeholder="" required>
            </div>
            <div class="mb-4">
                <label for="password" class="mb-1 block font-medium">Password:</label>
                <input name="password" type="password" id="password"
                       class="bg-gray-100 w-full border-gray-300 rounded-md px-3 py-2"
                       placeholder="" required>
            </div>

            <button type="submit"
                    class="mt-5 w-full bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md">
                Log In
            </button>
            <p class="mt-5 text-center">Don't have an account? <br><span class="hover:text-blue-700 font-bold"><a
                            href="/register">Register</a></span></p>
        </form>
    </div>
{% endblock %}