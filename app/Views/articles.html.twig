{% extends 'layout.html.twig' %}

{% block content %}
    <div class="grid mb-20 place-items-center">
        {% for article in articles %}
            <div class="shadow-black shadow-2xl w-2/5 mt-10 mb-10 mr-10 bg-black">
                <a href="" class="">
                    <img class="" src="{{ article.avatar }}" alt=""/>
                </a>
                <div class="p-5">
                    <a href="/articles/{{ article.id }}">
                        <h5 class="hover:text-yellow-500 mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ article.title|capitalize }}</h5>
                    </a>
                    <a href="/users/{{ article.author.id }}">
                        <p class="mt-10 mb-1 font-normal text-gray-700 dark:text-gray-400">Author: <span
                                    class="hover:text-yellow-500">{{ article.author.username }}</span></p>
                    </a>
                    <p class=" mb-3 text-gray-700 dark:text-gray-400">Published: {{ article.createdAt }}</p>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}