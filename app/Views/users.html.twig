{% extends 'layout.html.twig' %}

{% block content %}
    <div class="mb-20 flex items-center justify-center flex flex-wrap">
        {% for user in users %}
            <a href="/users/{{ user.id }}"
               class="shadow-black shadow-xl content-center mt-10 ml-11 mr-5 block h-40 w-96 p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-white dark:border-gray-700 dark:hover:bg-white">
                <div class="flex items-center justify-center mb-2">
                    <img src="https://i.pravatar.cc/150?img=69" alt="{{ user.name }}'s Image" class="rounded-full h-12 w-12">
                </div>
                <h5 class="hover:text-yellow-500 text-2xl text-center mb-2 font-bold tracking-tight text-black dark:text-black">{{ user.name }}</h5>
            </a>
        {% endfor %}
    </div>
{% endblock %}
