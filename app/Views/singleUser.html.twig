{% extends 'layout.html.twig' %}

{% block content %}
    <div class="mt-20 p-16">
        <div class="relative">
            <div class="w-48 h-48 bg-sky-700 mx-auto rounded-full shadow-3xl absolute inset-x-0 top-0 -mt-24 flex items-center justify-center text-indigo-500">
                <img class="items-center" src="https://placehold.co/100x100/0C6B9F/white?text={{ user.username }}"
                     alt=""/>
            </div>
        </div>
    </div>
    <div class="mt-20 text-center pb-12"><h1 class="text-4xl font-medium text-gray-700">{{ user.name }}
            <span class="font-light text-gray-500">({{ user.username }})</span></h1>
        <p class="font-light text-gray-600 mt-3">{{ user.email }}<p>
    </div>
    <p class="mt-5 text-center text-2xl font-medium">Articles ({{ articles|length }})</p>
    <div class="mb-20 grid place-items-center">
    {% for article in articles %}
        <a href="/article/{{ article.postId }}">
            <div class="w-2/5 ">
                <div class="h-10 lg:w-34 bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden">
                </div>
                <div class="shadow-gray shadow-2xl border-r border-b border-gray-400 lg:border-l lg:border-t lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
                    <div class="">
                        <div class="text-gray-900 font-bold text-xl">{{ article.title|capitalize }}</div>
                    </div>
                    <div class="flex items-center">
                        <div class="">
                            <p class="text-gray-900 leading-none">{{ article.body|capitalize }}.</p>
                        </div>
                    </div>
                </div>
            </div>
        </a>
        </div>
    {% endfor %}
    </div>
{% endblock %}